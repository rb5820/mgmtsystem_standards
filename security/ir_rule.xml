<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data >
        <!-- Multi-Company Record Rules for Management System Standards -->

        <!-- Standards: Multi-Company Access Rules -->
        <record id="mgmtsystem_standard_comp_rule" model="ir.rule">
            <field name="name">Standards: Multi-Company Rule</field>
            <field name="model_id" ref="model_mgmtsystem_standard"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', 
                '|', ('company_id', '=', False), 
                ('company_id', 'in', company_ids),
                ('allowed_company_ids', 'in', company_ids)]</field>
        </record>

        <!-- Standards: Manager Full Access -->
        <record id="mgmtsystem_standard_manager_rule" model="ir.rule">
            <field name="name">Standards: Manager Full Access</field>
            <field name="model_id" ref="model_mgmtsystem_standard"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_standard_manager')), (4, ref('base.group_system'))]"/>
        </record>

