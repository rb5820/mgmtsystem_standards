<odoo>
    <record id="view_mgmtsystem_standard_assessment_tool_list" model="ir.ui.view">
        <field name="name">mgmtsystem.standard.control.assessment.tool.list</field>
        <field name="model">mgmtsystem.standard.control.assessment.tool</field>
        <field name="arch" type="xml">
            <list string="Assessment Tools" >
                <field name="name"/>
                <field name="tool_type"/>
                <field name="linked_control_ids"/>
                <field name="company_id"/>
                <!-- Additional fields available with optional='hide' -->
                <field name="title" optional="hide"/>
                <field name="description" optional="hide"/>
                <field name="tool_url" optional="hide"/>
                <field name="tool_instructions" optional="hide"/>
                <field name="vendor" optional="hide"/>
                <field name="version" optional="hide"/>
                <field name="documentation_url" optional="hide"/>
                <field name="control_id" optional="hide"/>
                <field name="active" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_mgmtsystem_standard_assessment_tool_form" model="ir.ui.view">
        <field name="name">mgmtsystem.standard.control.assessment.tool.form</field>
        <field name="model">mgmtsystem.standard.control.assessment.tool</field>
        <field name="arch" type="xml">
            <form string="Assessment Tool">
                <header>
                    <div name="audit_workflow_helper" style="display: none;" invisible="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="title"/>
                            <field name="tool_type"/>
                            <field name="control_id"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="company_id"/>
                            <field name="vendor"/>
                            <field name="version"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <group>
                        <group>
                            <field name="tool_url" widget="url"/>
                            <field name="documentation_url" widget="url"/>
                        </group>
                        <group>
                            <field name="tool_instructions"/>
                        </group>
                    </group>
                    <notebook>
                        <page string=" ğŸ”— Linked Controls">
                            <group>
                                <field name="linked_control_ids" group_by_standard="True"/>
                            </group>

                        </page>
                        <page string="ğŸ›¡ï¸ Allowed Companies" name="allowed_companies">
                            <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="allowed_company_ids" widget="many2many_tags" groups="base.group_multi_company"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mgmtsystem_standard_assessment_tool" model="ir.actions.act_window">
        <field name="name">Assessment Tools</field>
        <field name="res_model">mgmtsystem.standard.control.assessment.tool</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_mgmtsystem_standard_assessment_tool_root" name="ğŸ› ï¸ Assessment Tools" parent="menu_mgmtsystem_standards_root" sequence="60"/>
    <menuitem id="menu_mgmtsystem_standard_assessment_tool" name="ğŸ› ï¸ Tool List" parent="menu_mgmtsystem_standard_assessment_tool_root" action="action_mgmtsystem_standard_assessment_tool" sequence="5"/>
</odoo>
