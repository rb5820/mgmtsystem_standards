<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Standard Certification List View -->
    <record id="view_mgmtsystem_standard_certification_list" model="ir.ui.view">
        <field name="name">mgmtsystem.standard.certification.list</field>
        <field name="model">mgmtsystem.standard.certification</field>
        <field name="arch" type="xml">
            <list string="Standard Certifications" decoration-success="state=='compliant'" 
                  decoration-warning="state=='review'" decoration-danger="state=='non_compliant'" sample="1">
                <field name="sequence" widget="handle"/>
                <field name="recommendation_number"/>
                <field name="name"/>
                <field name="title"/>
                <field name="standard_id"/>
                <field name="domain_id"/>
                <field name="assessment_status"/>
                <field name="level"/>
                <field name="state"/>
                <field name="compliance_percentage" widget="percentage"/>
                <field name="active" invisible="1"/>
                <!-- Additional fields available with optional='hide' -->
                <field name="control_id" optional="hide"/>
                <field name="description" optional="hide"/>
                <field name="rationale_statement" optional="hide"/>
                <field name="impact_statement" optional="hide"/>
                <field name="remediation_procedure" optional="hide"/>
                <field name="audit_procedure" optional="hide"/>
                <field name="additional_information" optional="hide"/>
                <field name="default_value" optional="hide"/>
                <field name="references" optional="hide"/>
                <field name="cis_controls" optional="hide"/>
                <field name="cis_safeguards_v8_ig1" optional="hide"/>
                <field name="cis_safeguards_v8_ig2" optional="hide"/>
                <field name="cis_safeguards_v8_ig3" optional="hide"/>
                <field name="cis_safeguards_v7_ig1" optional="hide"/>
                <field name="cis_safeguards_v7_ig2" optional="hide"/>
                <field name="cis_safeguards_v7_ig3" optional="hide"/>
                <field name="profile" optional="hide"/>
                <field name="company_id" optional="hide" groups="base.group_multi_company"/>
                <field name="section_number" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Standard Certification Form View -->
    <record id="view_mgmtsystem_standard_certification_form" model="ir.ui.view">
        <field name="name">mgmtsystem.standard.certification.form</field>
        <field name="model">mgmtsystem.standard.certification</field>
        <field name="arch" type="xml">
            <form string="Standard Certification">
                <header>
                    <div name="audit_workflow_helper" style="display: none;" invisible="1"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,review,compliant"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="title"/>
                            <field name="standard_id"/>
                            <field name="domain_id"/>
                            <field name="control_id"/>
                        </group>
                        <group>
                            <field name="recommendation_number"/>
                            <field name="section_number"/>
                            <field name="assessment_status"/>
                            <field name="level"/>
                            <field name="profile"/>
                            <field name="compliance_percentage" widget="percentage"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description &amp; Requirements">
                            <group>
                                <field name="description" widget="html" colspan="2"/>
                                <field name="rationale_statement" widget="html" colspan="2"/>
                                <field name="impact_statement" widget="html" colspan="2"/>
                            </group>
                        </page>

                        <page string="Implementation">
                            <group>
                                <field name="remediation_procedure" widget="html" colspan="2"/>
                                <field name="audit_procedure" widget="html" colspan="2"/>
                                <field name="default_value" colspan="2"/>
                            </group>
                        </page>

                        <page string="CIS Framework">
                            <group string="CIS Controls">
                                <field name="cis_controls" colspan="2"/>
                            </group>
                            <group string="CIS Safeguards v8">
                                <field name="cis_safeguards_v8_ig1"/>
                                <field name="cis_safeguards_v8_ig2"/>
                                <field name="cis_safeguards_v8_ig3"/>
                            </group>
                            <group string="CIS Safeguards v7">
                                <field name="cis_safeguards_v7_ig1"/>
                                <field name="cis_safeguards_v7_ig2"/>
                                <field name="cis_safeguards_v7_ig3"/>
                            </group>
                        </page>

                        <page string="Additional Information">
                            <group>
                                <field name="additional_information" widget="html" colspan="2"/>
                                <field name="references" colspan="2"/>
                            </group>
                        </page>

                        <page string="Settings">
                            <group>
                                <field name="sequence"/>
                                <field name="company_id"/>
                                <field name="active"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <!-- Standard Certification Kanban View -->
    <record id="view_mgmtsystem_standard_certification_kanban" model="ir.ui.view">
        <field name="name">mgmtsystem.standard.certification.kanban</field>
        <field name="model">mgmtsystem.standard.certification</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="title"/>
                <field name="state"/>
                <field name="standard_id"/>
                <field name="compliance_percentage"/>
                <field name="assessment_status"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <t t-out="record.recommendation_number.value"/>
                                        <t t-out="record.name.value"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <t t-out="record.title.value"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_top_right">
                                    <div class="o_kanban_record_badges">
                                        <span class="badge badge-pill badge-info">
                                            <t t-out="record.assessment_status.value"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="standard_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="compliance_percentage" widget="percentage"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <img t-att-src="kanban_image('res.users', 'image_128', record.create_uid.raw_value)" 
                                         t-att-title="record.create_uid.value" t-att-alt="record.create_uid.value" 
                                         width="24" height="24" class="oe_kanban_avatar"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_mgmtsystem_standard_certification_search" model="ir.ui.view">
        <field name="name">mgmtsystem.standard.certification.search</field>
        <field name="model">mgmtsystem.standard.certification</field>
        <field name="arch" type="xml">
            <search string="Search Standard Certifications">
                <field name="name" string="Name" filter_domain="['|', ('name', 'ilike', self), ('title', 'ilike', self)]"/>
                <field name="standard_id"/>
                <field name="domain_id"/>
                <field name="recommendation_number"/>
                <field name="section_number"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Under Review" name="review" domain="[('state', '=', 'review')]"/>
                <filter string="Compliant" name="compliant" domain="[('state', '=', 'compliant')]"/>
                <filter string="Non-Compliant" name="non_compliant" domain="[('state', '=', 'non_compliant')]"/>
                <separator/>
                <filter string="Automated" name="automated" domain="[('assessment_status', '=', 'automated')]"/>
                <filter string="Manual" name="manual" domain="[('assessment_status', '=', 'manual')]"/>
                <separator/>
                <filter string="Level 1" name="level1" domain="[('level', '=', '1')]"/>
                <filter string="Level 2" name="level2" domain="[('level', '=', '2')]"/>
                <filter string="Next Generation" name="ng" domain="[('level', '=', 'ng')]"/>
                <group expand="0" string="Group By">
                    <filter string="Standard" name="group_standard" context="{'group_by': 'standard_id'}"/>
                    <filter string="Domain" name="group_domain" context="{'group_by': 'domain_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Assessment Status" name="group_assessment" context="{'group_by': 'assessment_status'}"/>
                    <filter string="Level" name="group_level" context="{'group_by': 'level'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mgmtsystem_standard_certification" model="ir.actions.act_window">
        <field name="name">Standard Certifications</field>
        <field name="res_model">mgmtsystem.standard.certification</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_mgmtsystem_standard_certification_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Standard Certification!
            </p>
            <p>
                Standard Certifications contain comprehensive compliance data including
                detailed procedures, impact analysis, and remediation steps extracted 
                from benchmark documents like CIS Excel files.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_mgmtsystem_standard_certification"
              name="ðŸ† Certifications"
              parent="mgmtsystem_standards.menu_mgmtsystem_standards_root"
              action="action_mgmtsystem_standard_certification"
              groups="base.group_system,mgmtsystem_standards.group_standard_viewer,mgmtsystem_standards.group_standard_user,mgmtsystem_standards.group_standard_tester,mgmtsystem_standards.group_standard_reviewer,mgmtsystem_standards.group_standard_manager"
              sequence="60"/>

</odoo>